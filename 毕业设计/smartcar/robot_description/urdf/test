<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" 
    xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
        xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
        xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
    name="myrobot1">

    <xacro:property name="length_wheel" value="0.05" />
    <xacro:property name="radius_wheel" value="0.05" />
    <xacro:macro name="default_inertial" params="mass">
               <inertial>
                       <mass value="${mass}" />
                       <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                                iyy="1.0" iyz="0.0"
                                izz="1.0" />
               </inertial>
    </xacro:macro>

    <link name="base_footprint">
   	<visual>
		<geometry>
      			<box size="0.001 0.001 0.001"/>
     		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0"/>
   	</visual>
	<xacro:default_inertial mass="0.0001"/>
    </link>
    <xacro:include filename="$(find robot_description)/urdf/robot1.gazebo" />

    <joint name="base_footprint_joint" type="fixed">
        <origin xyz="0 0 0" />
        <parent link="base_footprint" />
        <child link="base_link" />
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.25 .16 .05"/>
            </geometry>
            <origin rpy="0 0 1.57075" xyz="0 0 0.025"/>
            <material name="blue">
                <color rgba="0 .5 .8 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                    <box size="0.25 .16 0.05"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="10"/>
    </link>

    <link name="right_front_wheel">  
        <visual>  
            <geometry>  
                <cylinder length=".03" radius="0.025"/>  
            </geometry>  
            <material name="black">  
                <color rgba="0 0 0 1"/>  
            </material>  
        </visual>  
        <collision>
            <geometry>
                    <cylinder length=".03" radius="0.025"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1"/>
    </link>  
    
    <link name="right_back_wheel">  
        <visual>  
        <geometry>  
            <cylinder length=".03" radius="0.025"/>  
        </geometry>  
        <material name="black">  
            <color rgba="0 0 0 1"/>  
        </material>  
        </visual>  
        <collision>
            <geometry>
                    <cylinder length=".03" radius="0.025"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1"/>
    </link>  
    
    <link name="left_front_wheel">  
        <visual>  
            <geometry>  
                <cylinder length=".03" radius="0.025"/>  
            </geometry>  
            <material name="black">  
                <color rgba="0 0 0 1"/>  
            </material>  
        </visual>  
        <collision>
            <geometry>
                    <cylinder length=".03" radius="0.025"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="1"/>
    </link>      
    
    <link name="left_back_wheel">  
        <visual>  
            <geometry>  
                <cylinder length=".03" radius="0.025"/>  
            </geometry>  
            <material name="black">  
                <color rgba="0 0 0 1"/>  
            </material>  
        </visual>  
        <collision>
            <geometry>
                    <cylinder length=".03" radius="0.025"/>
            </geometry>
